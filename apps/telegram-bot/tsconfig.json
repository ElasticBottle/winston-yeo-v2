{
	"extends": "@winston/tsconfig/base.json",
	"compilerOptions": {
		"lib": ["ES2022", "dom", "dom.iterable"],
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"plugins": [{ "name": "next" }],
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"module": "esnext"
	},
	"include": ["./*.ts", "src"],
	"exclude": ["node_modules"]
}
