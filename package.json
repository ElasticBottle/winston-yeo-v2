{
	"name": "create-t3-turbo",
	"private": true,
	"engines": {
		"node": ">=20.15.0"
	},
	"packageManager": "pnpm@9.4.0",
	"scripts": {
		"build": "turbo build",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "turbo clean",
		"create-package": "pnpm turbo gen init",
		"db:push": "pnpm -F db push",
		"db:studio": "pnpm -F db studio",
		"dev": "turbo dev --parallel",
		"env:encrypt": "bunx dotenvx encrypt",
		"env:add": "dotenvx set",
		"format": "turbo format --continue",
		"format:fix": "turbo format --continue -- --write",
		"lint": "turbo lint --continue",
		"lint:fix": "turbo lint --continue -- --write",
		"lint:ws": "pnpm dlx sherif@latest",
		"postinstall": "pnpm lint:ws",
		"typecheck": "turbo typecheck",
		"ui-add": "pnpm -F ui ui-add"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@dotenvx/dotenvx": "^1.1.0",
		"@turbo/gen": "^2.0.6",
		"@winston/biome-config": "workspace:*",
		"turbo": "^2.0.6",
		"typescript": "^5.5.2"
	}
}
